<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/libverify_activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="@dimen/libverify_message_image_margin_top"
        android:src="@drawable/libverify_ic_account_circle_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:id="@+id/textArea"
        android:layout_marginLeft="@dimen/libverify_message_bubble_margin_left"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/libverify_message_bubble_margin_top"
        android:layout_toRightOf="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text"
            android:textColor="#ffffff"
            android:textAppearance="@style/libverify_font_subhead"
            android:textAlignment="center"
            android:layout_marginRight="@dimen/libverify_message_text_margin_left"
            android:layout_marginLeft="@dimen/libverify_message_text_margin_left"
            android:layout_marginTop="@dimen/libverify_message_text_margin_top"
            android:layout_marginBottom="@dimen/libverify_message_text_margin_top"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/time"
        android:layout_marginLeft="@dimen/libverify_message_time_margin_left"
        android:layout_toRightOf="@+id/image"
        android:layout_below="@+id/textArea"
        android:textAppearance="@style/libverify_font_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
